{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["esnext"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitAny": false, //to be removed
		"downlevelIteration": true
	},
	"exclude": ["node_modules", "./src/**/*.test.ts", "./src/**/*.test.tsx", "testlib", "jest.config.js", "build"]
}
