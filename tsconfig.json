{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitAny": false
	},
	"exclude": ["node_modules", "./src/**/*.test.ts", "./src/**/*.test.tsx", "testlib", "jest.config.js", "build"]
}
