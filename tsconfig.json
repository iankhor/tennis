{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["esnext"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitAny": false, //to be removed
		"downlevelIteration": true,
		"baseUrl": "./",
		"paths": {
			"games/*": ["src/lib/games/*"],
			"sets/*": ["src/lib/sets/*"],
			"matches/*": ["src/lib/matches/*"],
			"src/*": ["src/*"]
		}
	},
	"exclude": ["node_modules", "./src/**/*.test.ts", "./src/**/*.test.tsx", "testlib", "jest.config.js", "build"]
}
